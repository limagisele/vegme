<%= form_with(model: @menu_item, data: {turbo: false}) do |f| %>
    <fieldset mb-2">
        <%= f.label :name, class: "form-label" %>
        <%= f.text_field :name, class: "form-control" %>
    </fieldset>
    
    <fieldset class="mb-2">
        <%= f.label :description, class: "form-label" %>
        <%= f.text_field :description, class: "form-control" %>
    </fieldset>
    
    <fieldset class="mb-2">
        <%= f.label :price, class: "form-label" %>
        <%= f.number_field :price, class: "form-control", minimum: 0 %>
    </fieldset>
    
    <fieldset class="mb-2">
        <%= f.radio_button :available, true, checked: "checked" %>
        <%= f.label :available, "Item is currently available" %>
    </fieldset>
    <fieldset>
        <%= f.radio_button :available, false %>
        <%= f.label :not_available, "Item is SOLD OUT" %>
    </fieldset>
    
    <fieldset>
        <%= f.hidden_field :user_id, value: current_user.id %>
    </fieldset>

    <% if @menu_item.photo.attached? %>
        <fieldset class="my-4">
            <%= cl_image_tag @menu_item.photo.key, transformation: ["media_lib_thumb"], cloud_name: ENV['CLOUDINARY_CLOUD_NAME'] %>
        </fieldset>
    <% end %>
    
    <fieldset class="my-4">
        <%= f.label :photo %>
        <%= f.file_field :photo %>
    </fieldset>
    
    <fieldset>
        <%= f.submit class: "btn btn-outline-success mb-3" %>
    </fieldset>
<% end %>